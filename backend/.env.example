# MongoDB Configuration
mongo_db_url=mongodb://localhost:27017/

# OpenAI Configuration (optional if USE_BEDROCK_ONLY=true)
openai_api_key=your_openai_api_key_here

# Google Gemini Configuration (optional if USE_BEDROCK_ONLY=true)
gemini_api_key=your_gemini_api_key_here
gcp_project_id=your_gcp_project_id_here

# AWS Configuration
aws_access_key_id=your_aws_access_key_id_here
aws_secret_access_key=your_aws_secret_access_key_here
bucket_name=your_s3_bucket_name_here
AWS_REGION=us-east-1

# Bedrock Configuration
# Set to 'true' to use only AWS Bedrock models (Claude Sonnet 3.5 + Pegasus)
# Set to 'false' to use OpenAI + Google Gemini models
USE_BEDROCK_ONLY=false